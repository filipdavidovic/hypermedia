include _includes/sharedFunctions
doctype html
html
    head
        meta(charset='utf-8')
        title Education Guide
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(http-equiv='X-UA-Compatible', content='IE=8')
        link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css', media='screen')
        link(rel='stylesheet', href='/font-awesome/css/font-awesome.min.css')
        link(rel='stylesheet', href='/stylesheets/hover.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        header
            nav#mainNavigation.navbar.navigacija.navbar-default.navbar-fixed-top
                .navbar-header
                    button#navigationToggle.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    #navbarBrand
                        a.navbar-brand(href='/')
                            img#bannerImage(src='')
                #navbar.navbar-collapse.collapse(style="overflow-y: visible")
                    ul.nav.navbar-nav.pull-right
                        - var classActive = (headerActive === "home" ? "active" : "")
                            li.headerTooltip(class=classActive, data-toggle='tooltip', title='Home', data-placement='bottom')
                                a#homeHeaderAnchor.topHeaderAnchor(href='/') Home
                        - if(userType === 'student')
                            - var classActive = (headerActive === "forum" ? "active" : "")
                                li.headerTooltip(class=classActive, data-toggle='tooltip', title='Forum', data-placement='bottom')
                                    a#forumHeaderAnchor.topHeaderAnchor(href='/forum') Forum
                        - var classActive = (headerActive === "faculties" ? "active" : "")
                            li.dropdown.dropdown-large(class=classActive)
                                a#facultiesHeaderAnchor.dropdown-toggle.topHeaderAnchor(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false', style='cursor: default;') Faculties
                                ul.dropdown-menu
                                    li
                                        a(href='/faculties') Faculties
                                    li.dropdown-header  Undergraduate
                                    li
                                        a(href='/faculties#bachelor') Bachelor
                                    li.dropdown-header  Graduate
                                    li
                                        a(href='/faculties#premaster') Pre-Master
                                    li
                                        a(href='/faculties#master') Master
                        - var classActive = (headerActive === "study" ? "active" : "")
                            li.dropdown(class=classActive)
                                a#studyingHeaderAnchor.dropdown-toggle.topHeaderAnchor(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false', style='cursor: default;') Studying
                                ul.dropdown-menu
                                    li
                                        a(href='/study/electives') Electives
                                    li
                                        a(href='/study/notebook') Notebook
                                    li
                                        a(href='/study/canvas') Canvas
                                    li
                                        a(href='/study/timetables-timeslots') Timetables &amp; Timeslots
                                    li
                                        a(href='/study/planapp') PlanApp
                                    li
                                        a(href='/study/internationals') Internationals
                                    - if(userType === 'student')
                                        li.dropdown-header  Students Only
                                        li
                                            a(href='/study/free-software') Free Software
                                        li
                                            a(href='/study/academic-year') Academic Year
                        - var classActive = (headerActive === "organization" ? "active" : "")
                            li.dropdown(class=classActive)
                                a#organizationHeaderAnchor.dropdown-toggle.topHeaderAnchor(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false', style='cursor: default;') Organization
                                ul.dropdown-menu
                                    li
                                        a(href='/organization/map') Map
                                    li
                                        a(href='/organization/contact') Contact
                                    li
                                        a(href='/organization/student-for-a-day') Student-for-a-Day
                                    - if(userType === 'student')
                                        li.dropdown-header
                                            | Students Only
                                        li
                                            a(href='/organization/advisors-tutors') Advisors &amp; Tutors
                                        li
                                            a(href='/organization/rules-regulations') Rules &amp; Regulations
                                        li
                                            a(href='/organization/campus-card') Campus Card
                                    - if(userType === 'visitor')
                                        li.dropdown-header
                                            | Visitors Only
                                        li
                                            a(href='/organization/enrollment') Enrollment


        //p.pull-right You are currently:
