    body
        header
            nav#mainNavigation.navbar.navigacija.navbar-default.navbar-fixed-top
                .navbar-header
                    button#navigationToggle.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    #navbarBrand
                        a.navbar-brand(href='/')
                            img#bannerImage(src='')
                #navbar.navbar-collapse.collapse
                    ul.nav.navbar-nav.pull-right
                        li.active.headerTooltip(data-toggle='tooltip', title='Home', data-placement='bottom')
                            a#homeHeaderAnchor.topHeaderAnchor(href='/') Home
                        - if(userType === 'student')
                            li.headerTooltip(data-toggle='tooltip', title='Forum', data-placement='bottom')
                                a#forumHeaderAnchor.topHeaderAnchor(href='/forum') Forum
                        li.dropdown.dropdown-large
                            a#facultiesHeaderAnchor.dropdown-toggle.topHeaderAnchor(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false') Faculties
                            ul.dropdown-menu
                                li
                                    a(href='/faculties') Faculties
                                li.dropdown-header  Undergraduate
                                li
                                    a(href='/faculties#bachelor') Bachelor
                                li.dropdown-header  Graduate
                                li
                                    a(href='/faculties#premaster') Pre-Master
                                li
                                    a(href='/faculties#master') Master
                        li.dropdown
                            a#studyingHeaderAnchor.dropdown-toggle.topHeaderAnchor(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false') Studying
                            ul.dropdown-menu
                                li
                                    a(href='/study/electives') Electives
                                li
                                    a(href='/study/notebook') Notebook
                                li
                                    a(href='/study/canvas') Canvas
                                li
                                    a(href='/study/timetables-timeslots') Timetables &amp; Timeslots
                                li
                                    a(href='/study/planapp') PlanApp
                                li
                                    a(href='/study/internationals') Internationals
                                - if(userType === 'student')
                                    li.dropdown-header  Students Only
                                    li
                                        a(href='/study/free-software') Free Software
                                    li
                                        a(href='/study/academic-year') Academic Year
                        li.dropdown
                            a#organizationHeaderAnchor.dropdown-toggle.topHeaderAnchor(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false') Organization
                            ul.dropdown-menu
                                li
                                    a(href='/organization/map') Map
                                li
                                    a(href='/organization/contact') Contact
                                li
                                    a(href='/organization/student-for-a-day') Student-for-a-Day
                                - if(userType === 'student')
                                    li.dropdown-header
                                        | Students Only
                                    li
                                        a(href='/organization/advisors-tutors') Advisors &amp; Tutors
                                    li
                                        a(href='/organization/rules-regulations') Rules &amp; Regulations
                                    li
                                        a(href='/organization/campus-card') Campus Card
                                - if(userType === 'visitor')
                                    li.dropdown-header
                                        | Visitors Only
                                    li
                                        a(href='/organization/enrollment') Enrollment


