mixin pickUserTypeInverse(userType)
    - if(userType === 'student')
        =" Visitor"
    - else
        =" Student"

mixin pickUserType(userType)
    - if(userType === 'student')
        =" Student"
    - else
        =" Visitor"

mixin formatDate(dateString)
    - var date = new Date(dateString);
    - var monthNames = [ "January", "February", "March", "April", "May", "June","July", "August", "September", "October", "November", "December" ];
    - var d = date.getDay();
    - var m = monthNames[date.getMonth()];
    - var y = date.getFullYear();
    - var h = date.getHours();
    - var min = date.getMinutes();
    - if(min%10 === min)
        - min = "0" + min;
    - var output = d + ". " + m + " " + y + ". - " + h + ":" + min
    =output

mixin putUsernameField(errorMessage)
    - if(errorMessage != undefined)
        input#username.error-form-field.form-control.form-input-mod(name="username", type="text", placeholder="Username")
    - else
        input#username.form-control.form-input-mod(name="username", type="text", placeholder="Username")

mixin putPasswordField(errorMessage)
    - if(errorMessage != undefined)
        input#password.error-form-field.form-control.form-input-mod(name="password", type="password", placeholder="Password")
    - else
        input#password.form-control.form-input-mod(name="password", type="password", placeholder="Password")

mixin putUsernameFieldSpecial(errorMessage)
    - if(errorMessage == 's-number')
        input#username.error-form-field.form-control.form-input-mod(type='text', placeholder='Username', name="username")
    - else
        input#username.form-control.form-input-mod(type='text', placeholder='Username', name="username")